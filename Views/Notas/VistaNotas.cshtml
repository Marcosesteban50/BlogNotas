@model Notas
@{
    ViewData["Title"] = "Editar Nota";
}


<h2>Nota : @Model.Nombre</h2>



<div asp-validation-summary="ModelOnly" class="text-danger"></div>


<form asp-controller="Notas" asp-action="VistaNotas">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nota" class="form-label"></label>
        <textarea asp-for="Nota" class="form-control TextareaNota"></textarea>
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>







    
    <a class="btn btn-secondary" asp-action="Index">Home</a>
</form>





@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>




}