@model RegistroViewModel
@{
    ViewData["Title"] = "Registro";
}


<div class="box">



            <input class="form-check-input"  
            type="checkbox" onclick="mostrarPassword()" > 
    <form asp-action="Registro">

        <div asp-validation-summary="ModelOnly" class="text-danger textoError"></div>




        <h2>Registro</h2>


        <div class="mb-3">

            <input asp-for="Nombre" placeholder="Nombre" class="inputs" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        

        <div class="mb-3">

            <input asp-for="Email" placeholder="Email" class="inputs" />
        <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">

        <input asp-for="Password" id="passwordInput" placeholder="Password"
                   class="inputs" />
        <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="group">

            <button class="btnRegistro">
                Registrar
            </button>
            <a class="btnLogin"
               asp-action="Login">Deseo Logearme!</a>
        </div>


    </form>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>

}